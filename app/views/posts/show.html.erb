<div>
  <div>
    <h5>Post by <%= @post.author.name%> </h5>
    <span>Comments <%= @post.comments_counter%></span>
    <span>Likes <%= @post.likes_counter%></span>
  </div>
  <div>
    <p><%= @post.title%></p>
    <p><%= @post.text%></p>
  </div>
    <% @post.comments.each do |comment| %>
  <div>
    <%= render partial: 'comment', locals: { comment: comment } %>
  </div>
  <% end %>
</div>
