<div class='card mx-auto my-1' style='max-width: 440px;'>
  <div class='row g-0 profile-card'>
    <div class='col-md-4'>
      <img src=<%= user.photo %> class='img-fluid rounded-start profile-pic' alt='profile pic' />
    </div>
    <div class='col-md-8'>
      <div class='card-body'>
        <h3><%= link_to user.name, user %></h3>
        <p class='card-text'>Number of posts: <%= user.posts.count %></p>
      </div>
    </div>
  </div>
</div>
