<%= render partial: 'shared/user', locals: { user: @user } %>
<div>
  <h5>Bio</h5>
  <p><%=@user.bio%></p>
</div>
<div>
  <% @user.recent_posts.each_with_index do |post , i| %>
    <h5>Post #<%= i + 1%></h5>
    <p><%= post.title%></p>
    <span>Comments <%= post.comments_counter%></span>
    <span>Likes <%= post.likes_counter%></span>
  <% end %>
  <button> <%= link_to 'See all posts',  user_posts_path(@user) %></button>
</div>
